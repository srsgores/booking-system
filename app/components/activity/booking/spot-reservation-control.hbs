<form action="" method="GET" {{on "change" this.onAddTickets}} {{on "reset" this.onReset}}>
	<fieldset>
		<legend>Reserve Spots</legend>
		<div class="form-field spot-control-container">
			{{#each this.tripSpots as |spot|}}
				<div class="spot-control" data-is-unavailable={{spot.isUnavailable}} data-has-checked-after={{spot.hasCheckedAfter}}>
					<label for={{spot.id}} title="Reserve {{spot.count}} Tickets">ğŸ§‘</label>
					<input class="sr-only" type="radio" id={{spot.id}} name="spots" checked={{spot.checked}} value={{spot.count}} required disabled={{spot.isUnavailable}} data-test-spot-control>
				</div>
			{{/each}}
			{{#if this.ticketCount}}
				<output for="{{this.controlIds}}">{{this.ticketCount}} Tickets</output>
				<button class="Remove" type="reset">âŒ</button>
			{{/if}}
		</div>
	</fieldset>
	{{yield}}
</form>